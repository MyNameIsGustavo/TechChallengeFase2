generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CH_usuario {
  id             Int             @id @default(autoincrement())
  nomeCompleto   String
  telefone       String
  email          String          @unique
  senha          String
  dataCadastro   DateTime        @default(now())
  papelUsuarioID Int
  postagens      CH_postagem[]
  papelUsuario   CH_papelUsuario @relation(fields: [papelUsuarioID], references: [id])
  curtidas       CH_curtidas[]
  comentarios    CH_comentario[]
}

model CH_papelUsuario {
  id           Int          @id @default(autoincrement())
  papelUsuario String
  usuarios     CH_usuario[]
}

model CH_postagem {
  id             Int             @id @default(autoincrement())
  titulo         String
  descricao      String
  visibilidade   Boolean
  dataPublicacao DateTime        @default(now())
  caminhoImagem  String
  autorID        Int
  autor          CH_usuario      @relation(fields: [autorID], references: [id])
  curtidas       CH_curtidas[]
  comentarios    CH_comentario[]
}

model CH_curtidas {
  id         Int         @id @default(autoincrement())
  usuarioID  Int
  postagemID Int
  usuario    CH_usuario  @relation(fields: [usuarioID], references: [id])
  postagem   CH_postagem @relation(fields: [postagemID], references: [id])

  @@unique([usuarioID, postagemID])
}

model CH_comentario {
  id          Int      @id @default(autoincrement())
  conteudo    String
  dataCriacao DateTime @default(now())
  usuarioID   Int
  postagemID  Int

  usuario  CH_usuario  @relation(fields: [usuarioID], references: [id])
  postagem CH_postagem @relation(fields: [postagemID], references: [id])
}
