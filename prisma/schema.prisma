generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CH_usuario {
  id              Int       @id @default(autoincrement())
  nomeCompleto    String
  telefone        String
  email           String    @unique
  senha           String
  dataCadastro    DateTime  @default(now())

  papelUsuarioID  Int
  papelUsuario    CH_papelUsuario @relation(fields: [papelUsuarioID], references: [id])

  postagens       CH_postagem[]
}

model CH_papelUsuario {
  id            Int          @id @default(autoincrement())
  papelUsuario  String

  usuarios      CH_usuario[]
}

model CH_postagem {
  id             Int       @id @default(autoincrement())
  titulo         String
  descricao      String
  visibilidade   Boolean
  dataPublicacao DateTime  @default(now())
  caminhoImagem  String

  autorID        Int
  autor          CH_usuario @relation(fields: [autorID], references: [id])
}